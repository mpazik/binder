{
  "name": "binder",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun --filter @binder/cli build",
    "build:prod": "bun --filter @binder/cli build:prod",
    "build:type": "bun --filter '*' build:type",
    "dev": "bun run --conditions=development packages/cli/src/index.ts",
    "clean": "bun --filter '*' exec rm -rf dist dist-ssr node_modules",
    "format": "prettier --write .",
    "lint": "bun --filter '*' lint",
    "typecheck": "bun --filter '*' typecheck",
    "test": "bun --filter '*' test",
    "check": "bun typecheck && bun build:type && bun test && bun lint &&  bun format",
    "check:verify": "prettier --check && eslint . && bun typecheck && bun  test",
    "mcp:inspect": "bunx @modelcontextprotocol/inspector bun run dev mcp"
  },
  "private": true,
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.36.0",
    "@types/bun": "latest",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
