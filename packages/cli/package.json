{
  "name": "@binder/cli",
  "version": "0.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "bin": {
    "binder": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "NODE_ENV=development bun run build.ts",
    "build:prod": "NODE_ENV=production bun run build.ts --prod",
    "format": "bun prettier --write --ignore-path ../../.prettierignore .",
    "lint": "bun eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "check": "bun lint && bun format && bun typecheck && bun test"
  },
  "dependencies": {
    "@binder/db": "workspace:*",
    "@binder/utils": "workspace:*",
    "@types/mdast": "^4.0.4",
    "@types/yargs": "^17.0.33",
    "handlebars": "^4.7.8",
    "mdast": "^3.0.0",
    "mdast-util-directive": "^3.1.0",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-to-markdown": "^2.1.2",
    "micromark-util-types": "^2.0.2",
    "remark-directive": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-parse-frontmatter": "^1.0.3",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "yaml": "^2.8.1",
    "yargs": "^18.0.0",
    "zod": "^4.1.11"
  }
}
